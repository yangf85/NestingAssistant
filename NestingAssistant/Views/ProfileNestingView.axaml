<UserControl
    x:Class="NestingAssistant.Views.ProfileNestingView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="clr-namespace:NestingAssistant.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ProfileNestingViewModel"
    mc:Ignorable="d">
	<Design.DataContext>
		<vm:ProfileNestingViewModel />
	</Design.DataContext>
	<TabControl>
		<TabItem Header="零件数据设置">
			<StackPanel>
				<DataGrid
                    GridLinesVisibility="Horizontal"
                    HeadersVisibility="All"
                    ItemsSource="{Binding ProfileParts}">
					<DataGrid.Columns>
						<DataGridTextColumn
                            Width="8*"
                            x:DataType="vm:ProfilePartViewModel"
                            Binding="{Binding Category}"
                            Header="类型" />
						<DataGridTextColumn
                            Width="3*"
                            x:DataType="vm:ProfilePartViewModel"
                            Binding="{Binding Length}"
                            Header="长度" />
						<DataGridTextColumn
                            Width="2*"
                            x:DataType="vm:ProfilePartViewModel"
                            Binding="{Binding Piece}"
                            Header="件数" />
						<DataGridTextColumn
                            Width="8*"
                            x:DataType="vm:ProfilePartViewModel"
                            Binding="{Binding Label}"
                            Header="标签" />
					</DataGrid.Columns>
				</DataGrid>
				<UniformGrid Margin="0,10,0,0" Rows="1">

					<Button Content="从剪切板复制" />
					<Button Content="导入Excel文件" />
				</UniformGrid>
			</StackPanel>
		</TabItem>
		<TabItem Header="原材料数据设置">
			<TextBlock Text="1l3j2l1j3l21" />
		</TabItem>
		<TabItem Header="优化设置" />
	</TabControl>
</UserControl>