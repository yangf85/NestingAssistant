<u:UrsaWindow
    x:Class="NestingAssistant.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:NestingAssistant.Views"
    xmlns:vm="using:NestingAssistant.ViewModels"
    Title="NestingAssistant"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
	<u:UrsaWindow.RightContent>
		<u:ThemeToggleButton IsThreeState="True" Mode="Controller" />
	</u:UrsaWindow.RightContent>
	<u:UrsaWindow.LeftContent>
		<StackPanel Margin="5,0,0,0" Orientation="Horizontal">
			<Image
                Width="25"
                Height="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/avalonia-logo.ico"
                UseLayoutRounding="True" />
			<TextBlock VerticalAlignment="Center" Text="NestingAssistant" />
		</StackPanel>
	</u:UrsaWindow.LeftContent>

	<views:ProfileNestingView Margin="0,30,0,0">
		<views:ProfileNestingView.DataContext>
			<vm:ProfileNestingViewModel />
		</views:ProfileNestingView.DataContext>
	</views:ProfileNestingView>
</u:UrsaWindow>