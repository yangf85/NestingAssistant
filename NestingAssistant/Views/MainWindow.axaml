<u:UrsaWindow
    x:Class="NestingAssistant.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:NestingAssistant.Views"
    xmlns:vm="using:NestingAssistant.ViewModels"
    Title="NestingAssistant"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ExtendClientAreaChromeHints="SystemChrome"
    SystemDecorations="BorderOnly"
    mc:Ignorable="d">
	<u:UrsaWindow.LeftContent>
		<StackPanel Margin="5,0" Orientation="Horizontal">
			<Image
                Width="25"
                Height="25"
                Source="/Assets/Logo.png" />
			<TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Text="Cyclone套裁助手" />
		</StackPanel>
	</u:UrsaWindow.LeftContent>
	<u:UrsaWindow.RightContent>
		<u:ThemeToggleButton IsThreeState="True" Mode="Controller" />
	</u:UrsaWindow.RightContent>
	<Panel>
		<views:ProfileNestingView Margin="0,30,0,0" />
	</Panel>
</u:UrsaWindow>